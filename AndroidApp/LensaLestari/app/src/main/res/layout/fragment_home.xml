<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCF9"
    android:padding="32dp"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Hai, User!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Selamat datang di Lensa Lestari"
                    android:textSize="14sp"
                    android:textColor="#6A6A6A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_person_24"
                android:backgroundTint="#FAF6E9"
                android:tint="@color/primary"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:contentDescription="Foto Profil" />
        </RelativeLayout>

        <!-- TOTAL SAMPAH -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_total"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="Total Sampah"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="100"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="32sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- SAMPAH ORGANIK -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Sampah Organik"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="25"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- SAMPAH ANORGANIK -->
        <LinearLayout
            android:background="@drawable/rounded_card_anorganik"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Sampah Anorganik"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="75"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- RIWAYAT ANALISIS -->
        <TextView
            android:text="Riwayat Analisis"
            android:textStyle="bold"
            android:textColor="#9CCB65"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Analisis Terbaru yang Telah Dilakukan"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Riwayat Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_card_anorganik"
            android:padding="16dp"
            android:layout_marginBottom="8dp">
            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/rounded_white_box" />
            <TextView
                android:text="Organik"
                android:textStyle="bold"
                android:textColor="#9CCB65"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_card_anorganik"
            android:padding="16dp">
            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/rounded_white_box" />
            <TextView
                android:text="Anorganik"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>